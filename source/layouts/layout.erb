<!doctype html>
<html>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300,400,700,900" rel="stylesheet">

    <%= stylesheet_link_tag :site, media: "screen" %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
  </head>

  <body>

    <div class="container">

      <header class="header">
        <div class="logo">
          <span class="logo__span">
            <svg class="logo__svg">
              <use xlink:href="images/sprite.svg#icon-swarm"></use>
            </svg>
          </span>
        </div>

        <form action="#" class="search">
          <input type="text" class="search__input" placeholder="Search" />
          <button class="search__button">
            <svg class="search__icon">
              <use xlink:href="images/sprite.svg#icon-magnifying-glass"></use>
            </svg>
          </button>
        </form>

        <nav class="user-nav">
          <div class="user-nav__item">
            <svg class="user-nav__icon">
              <use xlink:href="images/sprite.svg#icon-twitter"></use>
            </svg>
          </div>
          <div class="user-nav__item">
            <svg class="user-nav__icon">
              <use xlink:href="images/sprite.svg#icon-github"></use>
            </svg>
          </div>
          <div class="user-nav__item">
            <svg class="user-nav__icon">
              <use xlink:href="images/sprite.svg#icon-rss"></use>
            </svg>
          </div>
        </nav>
      </header><!-- /.header -->

      <br />

      <div class="content">

        <main class="blog-view">
          <h2 class="section__label">Latest</h2>

          <div class="post-box">
            <% blog.articles[0...5].each do |article| %>
              <article class="post">
                <div class="post__title"><%= link_to article.title, article, class: "post__link" %></div>
                <div class="post__date"><%= article.date.strftime('%A, %B %e, %Y') %></div>
                <div class="post__summary">
                  <%= article.data.summary %>
                  <%= link_to 'Read More', article, class: "post__more" %>
                </div>
              </article>
            <% end %>
          </div>
        </main><!-- /.blog-view -->

        <aside class="aside">
          <h2 class="section__label">Tags</h2>
          <ul>
            <% blog.tags.each do |tag, articles| %>
              <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
            <% end %>
          </ul>

          <br />
          <br />

          <h2 class="section__label">By Year</h2>
          <ul>
            <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
              <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
            <% end %>
          </ul>
        </aside>

      </div><!-- /.content -->

      <!--
        <div id="main" role="main">
        <%# = yield %>
        </div>
      -->

      <footer>
        footer
      </footer>


    </div><!-- /.container -->

  </body>

</html>

