<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300,400,700,900" rel="stylesheet">

  <%= stylesheet_link_tag :site, media: "screen" %>
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

  <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
</head>

<body>

<div class="container">

<header>
  <h2>Home</h2>

  <nav class="social-nav">
    <div class="social-nav__item">
      <a href="#" class="social-nav__link">twitter</a>
    </div>
    <div>
      <a href="#">github</a>
    </div>
    <div>
      <a href="#">rss</a>
    </div>
  </nav>
</header>

<br />
<br />
<br />


<main>
  <h2>Recent</h2>

  <% blog.articles[0...5].each do |article| %>
    <article>
      <%= link_to article.title, article %>
      <div><%= article.date.strftime('%B %e %Y') %></div>
    </article>

    <br />
  <% end %>

</main>

<aside>
  right aside
</aside>


<br />
<br />
<br />


<!-- BEGIN FIX -->
<div id="main" role="main">
  <%= yield %>
</div>

<aside>
  <h2>Tags</h2>
  <ol>
    <% blog.tags.each do |tag, articles| %>
      <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
    <% end %>
  </ol>

  <br />
  <br />

  <h2>By Year</h2>
  <ol>
    <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
      <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
    <% end %>
  </ol>
</aside>
<!-- END FIX -->


<br />
<br />
<br />

<footer>
  footer
</footer>

</div><!-- /.container -->

</body>

</html>

